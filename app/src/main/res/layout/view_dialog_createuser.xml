<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_explain"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/activity_titletext"
        android:text="创建用户"/>

    <!-- ip -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            android:id="@+id/txt_super"
            style="@style/IpSetText"
            android:text="超级用户"/>

        <EditText
            android:id="@+id/createuser_super"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_super"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_superpass"
            style="@style/IpSetText"
            android:text="超级用户密码"/>

        <EditText
            android:id="@+id/createuser_superpass"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_superpass"/>

    </RelativeLayout>

    <!-- 端口 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_username"
            style="@style/IpSetText"
            android:text="新用户名"/>

        <EditText
            android:id="@+id/createuser_username"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_username"/>

    </RelativeLayout>

    <!-- 端口 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_password"
            style="@style/IpSetText"
            android:text="密码"/>

        <EditText
            android:id="@+id/createuser_password"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_password"/>

    </RelativeLayout>

    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/createCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_cancel"
            android:text="@string/cancle"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/dialogbuttontext" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/createConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_sure"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dialogbuttontext" />
    </LinearLayout>

</LinearLayout>