<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/searchheight"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/activity_titletext"
        android:text="是否确定退出？"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="27dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_cancel"
            android:text="@string/cancle"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/dialogbuttontext" />

        <TextView
            android:layout_width="27dp"
            android:layout_height="match_parent"/>


        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_sure"
            android:text="@string/comfirm"
            android:textColor="@color/white"
            android:textSize="@dimen/dialogbuttontext" />
    </LinearLayout>

</LinearLayout>