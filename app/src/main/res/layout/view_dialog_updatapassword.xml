<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_explain"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="25dp"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/activity_titletext"
        android:text="修改密码"/>

    <!-- ip -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/dp_25">

        <TextView
            android:id="@+id/txt_oldname"
            style="@style/IpSetText"
            android:text="原用户名"/>

        <EditText
            android:id="@+id/updateOldName"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_oldname"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_oldpass"
            style="@style/IpSetText"
            android:text="原密码"/>

        <EditText
            android:id="@+id/updateOldPass"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_oldpass"/>

    </RelativeLayout>

    <!-- 端口 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/txt_newpass"
            style="@style/IpSetText"
            android:text="新密码"/>

        <EditText
            android:id="@+id/updateNewPass"
            style="@style/IpSetEditText"
            android:layout_toRightOf="@id/txt_newpass"/>

    </RelativeLayout>
    <!-- 按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/updateCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_cancel"
            android:text="@string/cancle"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/dialogbuttontext" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/updateConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_pop_explain_sure"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dialogbuttontext" />
    </LinearLayout>

</LinearLayout>